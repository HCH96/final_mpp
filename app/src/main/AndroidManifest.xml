<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tech.mobileprogrammingproject">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_main_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Monthly.monthlyPopup"
            android:theme="@style/popupTheme" android:screenOrientation="portrait">

        </activity>
        <activity android:name=".Daily.TodoAddedDialog"/>
        <activity android:name=".Daily.MainActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Monthly.Calender"/>
        <activity android:name=".Monthly.Stats"/>
        <activity android:name=".Monthly.Search"/>
    </application>

</manifest>